<% @tasks.each.with_index(1) do |t,i|%>
<h4><%=i%></h4>
<%= link_to t.title, task_path(t) %><br>
Content: <%= t.content %><br>
Date Due: <%= t.date.strftime("%Y-%m-%d") %><br>
Task Complete: <%= t.complete%><br>
<%= button_to "Delete", task_path(t), method: 'delete',  class: "button-small btn"%>
<% end %>  
